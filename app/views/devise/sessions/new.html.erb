<div class="nym-auth">
  <h2 class="nym-auth__title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "nym-auth__form" }) do |f| %>
    <div class="field nym-auth__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control nym-auth__input" %>
    </div>

    <div class="field nym-auth__field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control nym-auth__input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field nym-auth__field nym-auth__remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions nym-auth__actions">
      <%= f.submit "Log in", class: "btn btn-primary nym-auth__submit" %>
    </div>
  <% end %>

  <div class="nym-auth__links">
    <%= render "devise/shared/links" %>
  </div>
</div>
